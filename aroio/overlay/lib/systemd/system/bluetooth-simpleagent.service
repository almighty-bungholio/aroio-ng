[Unit]
Description=Bluetooth simple authentication service
ConditionPathIsDirectory=/sys/class/bluetooth
Requires=bluetooth.target
After=bluetooth.target checkuserconfig.service
Before=bluealsa.service

[Service]
Type=simple 
#ExecStartPre=/bin/sleep 2
ExecStartPre=/bin/hciconfig hci0 up piscan sspmode 0 class 0x200428
ExecStart=/usr/bin/bluetooth-simpleagent
Restart=always

[Install]
WantedBy=multi-user.target
